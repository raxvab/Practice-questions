#include<bits/stdc++.h>
using namespace std;
int main()
{
    long long int n,k;cin>>n>>k;
    if(n&1)
    {
        //odd
     if(k<=((n/2)+1))
     {k=k*2-1;
     cout<<k<<endl;
     }else
     {
         k=k-((n/2)+1);
         cout<<k*2;
     }
    }
    else
    {
   //even
     if(k<=n/2)
     {k=k*2-1;
     cout<<k<<endl;
     }else
     {
         k=k-n/2;
         cout<<k*2<<endl;
     }
    
    }
    
    
return 0;
}
